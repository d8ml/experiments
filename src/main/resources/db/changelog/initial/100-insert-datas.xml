<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="insert_user" author="n.erko">
        <insert schemaName="public" tableName="Users">
            <column name="username" value="user"/>
            <column name="password" value="pwd"/>
            <column name="email" value="email@mail.ru"/>
        </insert>
    </changeSet>

    <changeSet id="insert_forest" author="n.erko">
        <insert schemaName="public" tableName="Forests">
            <column name="user_id" valueNumeric="1"/>
            <column name="forest_name" value="My Forest"/>
        </insert>
    </changeSet>

    <changeSet id="insert_tree1" author="n.erko">
        <insert schemaName="public" tableName="Trees">
            <column name="forest_id" valueNumeric="1"/>
            <column name="tree_name" value="Собеседования"/>
            <column name="description" value="Провести 5 собеседований в команду"/>
            <column name="tree_type" value="limited_tree"/>
            <column name="tree_limit" valueNumeric="5"/>
        </insert>
    </changeSet>

    <changeSet id="insert_tree2" author="n.erko">
        <insert schemaName="public" tableName="Trees">
            <column name="forest_id" valueNumeric="1"/>
            <column name="tree_name" value="Прогулки с собакой"/>
            <column name="description" value="Ежедневно гулять с собакой"/>
            <column name="tree_type" value="periodic_tree"/>
            <column name="tree_limit" valueNumeric="1"/>
            <column name="tree_period" value="day"/>
        </insert>
    </changeSet>

    <changeSet id="insert_tree3" author="n.erko">
        <insert schemaName="public" tableName="Trees">
            <column name="forest_id" valueNumeric="1"/>
            <column name="tree_name" value="Расчистить электронную почту"/>
            <column name="tree_type" value="boolean_tree"/>
        </insert>
    </changeSet>

    <changeSet id="insert_tree4" author="n.erko">
        <insert schemaName="public" tableName="Trees">
            <column name="forest_id" valueNumeric="1"/>
            <column name="tree_name" value="Делать что-то хорошее"/>
            <column name="tree_type" value="inf_tree"/>
        </insert>
    </changeSet>
</databaseChangeLog>