<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

   <changeSet id="create_table_forests" author="n.erko">
       <createTable tableName="Forests">
           <column name="forest_id" type="SERIAL">
               <constraints primaryKey="true" nullable="false"/>
           </column>
           <column name="user_id" type="INT">
               <constraints foreignKeyName="fk1" referencedTableName="Users" referencedColumnNames="user_id"/>
           </column>
           <column name="forest_name" type="VARCHAR(100)">
               <constraints nullable="false"/>
           </column>
           <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
       </createTable>
   </changeSet>
</databaseChangeLog>